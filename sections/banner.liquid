<!-- Start Banner Hero -->
<section>
    <div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        {% comment %} <ol class="carousel-indicators">
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        </ol> {% endcomment %}
        <div class="carousel-inner">     
            <div class="carousel-item active">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            {% if section.settings.banner_image != blank %}
                                <img
                                    width="100%"
                                    height="100%"
                                    loading="lazy"
                                    src="{{ section.settings.banner_image | image_url }}"
                                    alt="logo top"/>
                            {% else %}
                                <img 
                                    width="100%"
                                    height="100%"
                                    loading="lazy"
                                    class="img-fluid"
                                    src="{{ 'banner_img_03.jpg' | asset_url }}"
                                    alt="nike-logo"/>
                            {% endif %}
                        </div>

                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                {%- for block in section.blocks -%}
                                    {%- case block.type -%}
                                    {%- when 'heading' -%}
                                            <h1 class="h1">{{ block.settings.banner-heading }}</h1>
                                    {%- when 'subtext' -%}
                                            <h3 class="h2">{{ block.settings.banner-subtext }}</h3>
                                    {%- when 'content' -%}
                                            <p>
                                                {{ block.settings.banner-content }}
                                            </p>
                                    {%- endcase -%}
                                {%- endfor -%}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Hero -->




{% schema %}
{
    "name": "Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Pick Banner image",
            "info": "Png file"
        }
    ],
    "presets": [
    {
      "name": "Banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subtext"
        },
        {
          "type": "content"
        }
      ]
    }
  ],

    "blocks": [
        {
          "type": "heading",
          "name": "Heading",
          "limit": 1,
          "settings": [
            {
              "type": "inline_richtext",
              "id": "banner-heading",
              "default": "Repr in voluptate",
              "label": "Here heading"
            }
          ]
        },

        {
            "type": "subtext",
            "name": "Subtext",
            "limit": 1,
            "settings": [
                {
                "type": "inline_richtext",
                "id": "banner-subtext",
                "default": "Repr in voluptate",
                "label": "Here subtext"
                }
            ]
        },

        {
            "type": "content",
            "name": "Content",
            "limit": 1,
            "settings": [
                {
                "type": "inline_richtext",
                "id": "banner-content",
                "default": "We bring you 100% free CSS templates for your websites. If you wish to support TemplateMo, please make a small contribution via PayPal or tell your friends about our website. Thank you.",
                "label": "Here content"
                }
            ]
        },
    ],

    
}
{% endschema %}