<div class="container py-5 contact-form">
    <div class="row py-5">


        <div class="col-md-9 m-auto">
            {% form 'contact' %}
                {% if form.posted_successfully? %}
                    <p>Your message has been sent!</p>
                {% elsif form.errors %}
                    {{ form.errors | default_errors }}
                {% endif %}

                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputname">Name</label>
                            <input type="text" class="form-control mt-1" id="inputname" name="contact[first_name]" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputemail">Email</label>
                            <input type="email" class="form-control mt-1" id="inputemail" name="contact[email]" placeholder="Email">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="inputnumber">Phone</label>
                        <input type="tel" class="form-control mt-1" id="inputnumber" name="contact[phone]" placeholder="Phone">
                    </div>
                    <div class="mb-3">
                        <label for="inputmessage">Message</label>
                        <textarea class="form-control mt-1" id="inputmessage" name="contact[body]" placeholder="Message" rows="8"></textarea>
                    </div>
                    <div class="row">
                        <div class="col text-end mt-2">
                            <button type="submit" class="btn btn-success btn-lg px-3">Letâ€™s Talk</button>
                        </div>
                    </div>
            {% endform %}
        </div>


    </div>
</div>

<style>
    .contact-form{
    background: {{section.settings.banner_bg}}!important;
}
</style>



{% schema %}
{
    "name": "Contact form",
    "settings": [
        {
            "type": "color",
            "id": "banner_bg",
            "label": "Change bg color",
            "default": "#ffffff"
        },
    ],
    "presets": [
    {
      "name": "Contact form",
      "blocks": [
      ]
    }
  ],
    
}
{% endschema %}