<!-- Start about banner -->
<section>
    <section class="bg-success about-bg py-5">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-md-8 text-white">

                    {% for block in section.blocks %}
                        {% if block.type == 'heading' %}
                          <h1>{{ block.settings.banner-heading }}</h1>
                        {% endif %}
                        {% if block.type == 'subtext' %}
                          <p>{{ block.settings.banner-subtext }}</p>
                        {% endif %}
                    {% endfor %}          

                </div>
                <div class="col-md-4">

                    {% if section.settings.banner_image != blank %}
                        <img
                            width="100%"
                            height="100%"
                            loading="lazy"
                            src="{{ section.settings.banner_image | image_url }}"
                            alt="logo top"/>
                    {% else %}
                        <img 
                            width="100%"
                            height="100%"
                            loading="lazy"
                            class="img-fluid"
                            src="{{ 'about-hero.svg' | asset_url }}"
                            alt="about-banner"/>
                    {% endif %}

                </div>
            </div>
        </div>
    </section>
</section>
<!-- End about banner -->


<style>
    .about-bg{
    background: {{section.settings.banner_bg}}!important;
}
</style>



{% schema %}
{
    "name": "About Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Pick Banner image",
            "info": "Png file"
        },
        {
            "type": "color",
            "id": "banner_bg",
            "label": "Change bg color",
            "default": "#59ab6e"
        }
    ],
    "presets": [
    {
      "name": "About Banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subtext"
        }
      ]
    }
  ],

    "blocks": [
        {
          "type": "heading",
          "name": "Heading",
          "limit": 1,
          "settings": [
            {
              "type": "inline_richtext",
              "id": "banner-heading",
              "default": "Repr in voluptate",
              "label": "Here heading"
            }
          ]
        },

        {
            "type": "subtext",
            "name": "Subtext",
            "limit": 1,
            "settings": [
                {
                "type": "inline_richtext",
                "id": "banner-subtext",
                "default": "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
                "label": "Here subtext"
                }
            ]
        }
    ],

    
}
{% endschema %}