<!-- Start about banner -->
<section>
    <section class="bg-success py-5">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-md-8 text-white">
                    <h1>About Us</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                        quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </p>
                </div>
                <div class="col-md-4">

                    {% if section.settings.banner_image != blank %}
                        <img
                            width="100%"
                            height="100%"
                            loading="lazy"
                            src="{{ section.settings.banner_image | image_url }}"
                            alt="logo top"/>
                    {% else %}
                        <img 
                            width="100%"
                            height="100%"
                            loading="lazy"
                            class="img-fluid"
                            src="{{ 'about-hero.svg' | asset_url }}"
                            alt="about-banner"/>
                    {% endif %}

                </div>
            </div>
        </div>
    </section>
</section>
<!-- End about banner -->




{% schema %}
{
    "name": "About Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Pick Banner image",
            "info": "Png file"
        }
    ],
    "presets": [
    {
      "name": "About Banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subtext"
        },
        {
          "type": "content"
        }
      ]
    }
  ],

    "blocks": [
        {
          "type": "heading",
          "name": "Heading",
          "limit": 1,
          "settings": [
            {
              "type": "inline_richtext",
              "id": "banner-heading",
              "default": "Repr in voluptate",
              "label": "Here heading"
            }
          ]
        },

        {
            "type": "subtext",
            "name": "Subtext",
            "limit": 1,
            "settings": [
                {
                "type": "inline_richtext",
                "id": "banner-subtext",
                "default": "Repr in voluptate",
                "label": "Here subtext"
                }
            ]
        },

        {
            "type": "content",
            "name": "Content",
            "limit": 1,
            "settings": [
                {
                "type": "inline_richtext",
                "id": "banner-content",
                "default": "We bring you 100% free CSS templates for your websites. If you wish to support TemplateMo, please make a small contribution via PayPal or tell your friends about our website. Thank you.",
                "label": "Here content"
                }
            ]
        },
    ],

    
}
{% endschema %}